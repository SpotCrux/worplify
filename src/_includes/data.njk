<li class="card-content">
    <a href="{{ post.url }}" class="img-link"> <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}"></a>
    <p class="author">by <span>{{ post.data.author }}</span> | Date Posted: <span>{{ post.date | postDate }}</span> || <span class="type">{{ post.data.type }}</span></p>
<div card-span>
    <h2 class="card-title">{{ post.data.title }}</h2>
    <p class="descript">{{ post.data.description }}</p>
    <a href="{{ post.url }}" class="card-btn">Download</a>
</div>
</li>
